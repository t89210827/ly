/* pages/travelCustomization/index/index.wxss */

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 60px;
  text-align: center;
}

/* 底部绝对定位 */

.travel-add {
  width: 100%;
  height: 90rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  /*font-family: PingFang-SC-Medium;*/
  font-size: 30rpx;
  color: #646464;
  letter-spacing: -0.34rpx;
  /* line-height: 90rpx; */
}

/* x绝对定位 */

.travel-add-comment {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0;
  font-size: 30rpx;
  background-color: #fd8109;
  color: white;
  letter-spacing: -0.34rpx;
}

.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 6em;
  height: 3px;
  background-color: #5c2b06;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}

.weui-navbar__item.weui-bar__item_on {
  color: #5c2b06;
}
