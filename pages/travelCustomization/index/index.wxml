        <view hidden="{{activeIndex != 1}}">

          <checkbox-group bindchange="checkboxChange">
            <block wx:for="{{customization}}">
              <view style='margin:30rpx 20rpx;'>

                <view class='flex-row' style='align-items:center;padding-left:10rpx;background-color:white;height:110rpx;'>
                  <view style='width:50rpx;'>
                    <checkbox value="{{index}}" style='width:30rpx;height:30rpx;' checked="{{item.checked}}" />
                  </view>
                  <navigator url='../customizationDetail/customizationDetail?id={{item.id}}' class='flex-row' style='align-items:center;'>
                    <view style='margin-left:10rpx;width:400rpx;'>
                      <view>{{item.name}}</view>
                      <view class='font-size-13'>{{item.desc}}</view>
                    </view>
                    <view style='width:160rpx;'>{{airplane.price}}</view>
