<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view hidden="{{activeIndex != 0}}">


          <checkbox-group bindchange="checkboxChange">
            <block wx:for="{{items}}">
              <view style='margin:30rpx 20rpx;'>

                <view class='flex-row' style='align-items:center;padding-left:10rpx;background-color:white;height:110rpx;'>
                  <view style='width:50rpx;'>
                    <checkbox value="{{index}}" style='width:30rpx;height:30rpx;' checked="{{item.checked}}" />
                  </view>
                  <navigator url='{{item.src}}' class='flex-row' style='align-items:center;'>
                    <view style='margin-left:10rpx;width:400rpx;'>
                      <view>{{item.name}}</view>
                      <block wx:if='{{index == 0}}'>
                        <view wx:if='{{airplane.price}}' class='font-size-13'>南航CA1216 空客319</view>
                        <view wx:else class='font-size-13'>点击选择机票</view>
                      </block>
                      <block wx:if='{{index == 1}}'>
                        <view wx:if='{{hotel.price}}' class='font-size-13'>南航CA1216 空客319</view>
                        <view wx:else class='font-size-13'>点击选择酒店</view>
                      </block>
                      <block wx:if='{{index == 2}}'>
                        <view wx:if='{{car.price}}' class='font-size-13'>南航CA1216 空客319</view>
                        <view wx:else class='font-size-13'>点击选择车导</view>
                      </block>
                    </view>
                    <view wx:if="{{index == 0}}" style='width:160rpx;'>{{airplane.price}}</view>
                    <view wx:if="{{index == 1}}" style='width:160rpx;'>{{hotel.price}}</view>
                    <view wx:if="{{index == 2}}" style='width:160rpx;'>{{car.price}}</view>
                    <image src='../../../images/right.png' style='width:40rpx; height:40rpx;'></image>
                  </navigator>
                </view>

                <view style='height:2rpx;background-color:#e6e6e6;width:92%;margin-left:8%;'></view>

              </view>

            </block>
          </checkbox-group>

