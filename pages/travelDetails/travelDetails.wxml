<!--pages/travelDetails/travelDetails.wxml-->
<view>
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title" style=''>{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);background-color:yellow;"></view>
      </view>
      <view class="weui-tab__panel">
        <!-- 产品详情图文 -->
        <view class="" hidden="{{activeIndex != 0}}">

          <swiper indicator-dots="true" indicator-color="rgba(255, 255, 255, .3)" indicator-active-color="#FFFFFF" autoplay="true" interval="4000" duration="600" style="height:187px">
            <block wx:for="{{swipers}}">
              <swiper-item>
                <image src="{{item.img}}" class="slide-image" />
              </swiper-item>
            </block>
          </swiper>

          <view style='margin:10rpx 15rpx;'>
            <text class='text-twoline font-size-16 margin-bottom-15'>苏州+上海+乌镇双飞五日跟团游（全程高档酒店50元餐标 船游西湖 无购物）</text>

            <view>
              <text class='travel-price'>￥1965</text>
              <text>元/人</text>
            </view>
          </view>

          <view class='bar-10'></view>

          <view class='width-100 flex-row' style='margin:10rpx auto;align-items:center;height:60rpx;'>
            <image src='/images/user_n.png' style='width:40rpx;height:40rpx;margin:auto 20rpx;'></image>
            <view class='font-mydata' style='width:600rpx;'>价格/人数</view>
            <image src='/images/right.png' style='width:30rpx;height:30rpx;'></image>
          </view>

          <view class='bar-10'></view>

          <view class='width-100 flex-row' style='margin:10rpx auto;align-items:center;height:60rpx;'>
            <image src='/images/user_n.png' style='width:30rpx;height:30rpx;margin:auto 25rpx;'></image>
            <view class='font-mydata' style='width:600rpx;'>线路概览</view>
          </view>

          <image src='/images/details.png' style='width:100%;height:1000rpx;' mode=''></image>
          <text style='margin:10rpx 10rpx;'>以上行程可能因为天气或者因为其他原因有所变动,具体行程以导游安排</text>
          <view style='height:90rpx;'></view>
        </view>

        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>
        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">选项三的内容</view>

        <view class="book-shara-box flex-row" style='background-color:#f9f9f9'>
          <view class="travel-share1">
            <image src='/images/transpond.png' style='width:50rpx;height:50rpx;'></image>
            <view style='text-align:center;line-height:20rpx;'>转发</view>
          </view>
          <view class="travel-share1">
            <image src='/images/collect.png' style='width:50rpx;height:50rpx;'></image>
            <view style='text-align:center;line-height:20rpx;'>收藏</view>
          </view>
          <view class='travel-share2' style="background-color:yellow;line-height:90rpx;" catchtap="gotobuy">立即下单</view>
        </view>

      </view>
    </view>
  </view>
</view>